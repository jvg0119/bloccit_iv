
<%=  form_for [commentable, Comment.new] do |f| %>

      <div class="form-group">
        <%= f.label :body, class: 'sr-only' %>
        <%= f.text_area :body, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit "Submit Comment", class: "btn btn-success pull-right" %>
      </div>

<% end %>
