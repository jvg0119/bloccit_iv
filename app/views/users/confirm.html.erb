<h1>Sign Up Confirmation</h1>
<div class="row">
  <div class="col-md-4">
    <h3>Are you sure these values are correct?</h3><br/>
    <h4>Email: <%= @user.email %></h4>
    <h4>Name: <%= @user.name %></h4>
  </div>
</div>

<div class="row">
  <div class="col-md-4">
    <%#= button_to "Yes", {controller: "users", action: "create", params: params.permit! } , class: 'btn btn-success' %>
    <%= link_to "Yes", {controller: "users", action: "create", params: params.permit!} , method: :post, class: 'btn btn-success' %>
    <%= link_to "No", {controller: "users", action: "new"} , class: 'btn btn-danger' %>
  </div>
</div>
