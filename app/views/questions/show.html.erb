<h1><%= @question.title %></h1>

<div class="row">
  <div class="col-md-8">
    <%= @question.body %><br/>
    resolved? <%= status(@question.resolved) %>

  </div>
    <div class="col-md-4">
      <%= link_to "Edit", edit_question_path(@question), class: "btn btn-success" %>
      <%= link_to "Delete Question", question_path(@question), method: :delete, data: {confirm: 'Are you sure you want to delete this question?'}, class: "btn btn-danger" %>
    </div>
</div>
