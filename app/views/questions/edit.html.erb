<h1>Edit Question</h1>
<div class="row">
  <div class="col-sm-4">
    <strong>Instructions for Editing questions:</strong>
    <ul>
      <li>Write legible</li>
      <li>No shortcuts</li>
      <li>Be specific</li>
    </ul>
  </div>

  <div class="col-sm-8">
    <%= form_for(@question) do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control", placeholder: "Enter title", autofocus: true %>
      </div>
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_field :body, class: "form-control", placeholder: "Enter body" %>
      </div>
      <div class="form-group">
        <%= f.check_box :resolved %> resolved
      </div>
      <div class="form-group">
        <%= f.submit "Save", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>

</div>
