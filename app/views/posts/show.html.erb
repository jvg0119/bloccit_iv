<h1><%= @post.title %></h1>

<div class="row">
  <div class="col-md-8">
    <%= @post.body %><br>
    <small>
      submitted <%= time_ago_in_words @post.created_at %> ago
      by <%= @post.user.name %>
    </small>
  </div>



    <%# if user_is_authorized_for_post?(@post) %>
      <div class="col-md-4">

        <% if user_is_authorized_for_post_edit?(@post) %>
          <%= link_to "Edit Post", edit_topic_post_path(@post.topic, @post), class: "btn btn-success" %>
        <% end %>

        <% if user_is_authorized_for_post_delete?(@post) %>
          <%= link_to "Delete Post", topic_post_path(@post.topic, @post), method: :delete, data: {confirm: 'Are you sure you want to delete this post?'}, class: "btn btn-danger" %>
        <% end %>

      </div>
    <%# end %>



