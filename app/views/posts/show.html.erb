<h1><%= @post.title %></h1>

<div class="row">
  <div class="col-md-8">
    <%= @post.body %>
  </div>
    <div class="col-md-4">
      <%= link_to "Edit", edit_post_path(@post), class: "btn btn-success" %>
      <%= link_to "Delete Post", post_path(@post), method: :delete, data: {confirm: 'Are you sure you want to delete this post?'}, class: "btn btn-danger" %>
    </div>
</div>
